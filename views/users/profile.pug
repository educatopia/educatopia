extends ../layout

block content
  .row
    .col-md-3
      img(
      src='/img/placeholderProfilePicture.png',
      alt='Profile picture of' + user.username
      )
      h2= user.name || ""
      h3 @#{user.username}
      hr
    .col-md-9
      - var length = exercises.length
      h3= length + ' created exercise' + (length !== 1 ? 's' : '')
      table.table.table-condensed
        tbody
          each exercise, index in exercises
            - var slug = '…'

            if exercise.task
              - var slug = exercise.task.substr(0, 110)
              if exercise.task.length > 110
                - slug += '…'
            tr
              td= index + 1
              td
                a(href='/exercises/' + exercise.slug)
                  = slug
